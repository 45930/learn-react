{
  "compilerOptions": {    
    "target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"jsx": "react-jsx"
  },
	"include": [
		"./src/*.ts",
    "./src/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
	],
	"exclude": [
			"node_modules",
			"vite.config.js"
	]
}